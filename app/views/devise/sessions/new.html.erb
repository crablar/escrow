
<%= form_for(resource, :as => resource_name, :html => {:class => "form-signin", role: "form"},  :url => session_path(resource_name)) do |f| %>
<h2 class="form-signin-header medicos-text">Sign in</h2>
  <%= f.email_field :email, :class => "form-control",  :placeholder => "Email", :autofocus => true %>
  <%= f.password_field :password, :class => "form-control",  :placeholder => "Password"%>
  <!--<div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>-->

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

   <div><%= f.submit "Sign in", :class => 'btn btn-lg btn-primary btn-block' %></div>
<% end %>

<%= render "devise/shared/links" %>

