<%= form_for :article, url: articles_path do |f| %>
    <%= hidden_field_tag :creator_id, current_user.id %>
    <p>
      <%= f.label :title%><br>
      <%= f.text_area :title %>
    </p>

    <p>
      <%= f.label :min_bet %><br>
      <%= f.text_field :min_bet %>
    </p>

    <p>
      <%= f.label :time_to_expiration %><br>
      <%= f.select :time_to_expiration, options_for_select([["1 minute", 60], ["10 minutes", 600]]) %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', articles_path %>